<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Negro"
    tools:context="com.eduardoapps.comoves.Revistas">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Tierra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/Blanco"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Día de la Tierra"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/natura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:scrollbarStyle="outsideInset"/>
            <TextView
                android:id="@+id/animales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/Blanco"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Animales en Peligro"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:scrollbarStyle="outsideInset"/>
            <TextView
                android:id="@+id/tecnologia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/Blanco"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Futuro de la Tecnología"
               />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/robots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:scrollbarStyle="outsideInset"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>